{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <div class="container blog-page m-5">
        <div class="row clearfix">
            {% for post in posts %}
                <div class="col-lg-4 col-md-12 p-4">
                    <div class="card single_post p-4">
                        <div class="header">
                            <h2>{{ post.title }}</h2>
                        </div>
                        <div class="body">
                            <ul class="meta">
                                <li><a href="#"><i class="zmdi zmdi-account col-blue"></i>Posted By:
                                        {{ post.author }}</a></li>
                                <li>
                                    {#                                    <a href="#"><i class="zmdi zmdi-label col-amber"></i>{{ post.category.name }}</a> #}
                                </li>
                                {#                                <li><a href="#"><i class="zmdi zmdi-comment-text col-blue"></i>Comments: #}
                                {#                                        {{ post.comment|length }}</a> #}
                                {#                                </li> #}
                            </ul>
                        </div>
                        <div class="body">
                            <div class="img-post m-b-15">
                                <img src='{{ post.img }}' alt="Awesome Image">
                            </div>
                            <p>{{ post.body | slice(0, 150) }}</p>
                            <a href="#" title="read more" class="btn btn-round btn-info">Read More</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>


{% endblock %}
